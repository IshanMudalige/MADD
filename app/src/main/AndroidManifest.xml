<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aim.sliitquizapp">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".QuizDetails"></activity>
        <activity android:name=".QuizView" />
        <activity
            android:name=".SelectquizActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".StatisticsActivity"
            android:label="Statistics"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".QuizActivity"
            android:label="Create Quiz"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".AnswerActivity"
            android:label="Result Analysis" />
        <activity
            android:name=".ResultActivity"
            android:label="Quiz Result"
            android:parentActivityName=".SelectquizActivity" />
        <activity android:name=".QuestionActivity" />
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/AppWelcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>